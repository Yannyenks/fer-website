RewriteEngine On
RewriteBase /

# 0️⃣ Bloquer totalement la réécriture pour /server/*
RewriteRule ^server/ - [L]

# 1️⃣ Servir directement les fichiers existants
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2️⃣ Router API vers le backend
RewriteRule ^api/(.*)$ /api/index.php?path=$1 [L,QSA]

# 3️⃣ Fallback React SPA
RewriteRule ^ index.html [L]
