{
  "openapi": "3.0.0",
  "info": {
    "title": "FER Website API",
    "description": "API pour gestion événements, candidats Miss/Master, votes et partage",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Serveur local de développement"
    },
    {
      "url": "https://jvepi.com/api",
      "description": "Serveur de production (LWS)"
    }
  ],
  "components": {
    "securitySchemes": {
      "AdminKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-ADMIN-KEY"
      }
    },
    "schemas": {
      "Event": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "start_date": {"type": "string", "format": "date-time"},
          "end_date": {"type": "string", "format": "date-time"},
          "cover_image": {"type": "string"},
          "description": {"type": "string"},
          "category_id": {"type": "integer"}
        }
      },
      "Candidate": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "category_id": {"type": "integer"},
          "bio": {"type": "string"},
          "image": {"type": "string"},
          "votes": {"type": "integer"},
          "extra": {"type": "object"}
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "image": {"type": "string"}
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "username": {"type": "string"},
          "email": {"type": "string", "format": "email"},
          "role": {"type": "string", "enum": ["user", "admin"], "default": "user"},
          "created_at": {"type": "string", "format": "date-time"},
          "last_login": {"type": "string", "format": "date-time"}
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {"type": "string"}
        }
      }
    }
  },
  "paths": {
    "/admin/register": {
      "post": {
        "summary": "Enregistrer un nouvel admin",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string", "minLength": 6},
                  "email": {"type": "string", "format": "email"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Admin créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "id": {"type": "integer"},
                    "api_key": {"type": "string", "description": "Clé API pour authentification (X-ADMIN-KEY)"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Données invalides"
          },
          "409": {
            "description": "Nom d'utilisateur déjà existant"
          }
        }
      }
    },
    "/admin/login": {
      "post": {
        "summary": "Connexion admin",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentification réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "admin": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "username": {"type": "string"},
                        "email": {"type": "string"},
                        "api_key": {"type": "string", "description": "Clé API pour authentification (X-ADMIN-KEY)"}
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Données manquantes"
          },
          "401": {
            "description": "Identifiants incorrects"
          }
        }
      }
    },
    "/events": {
      "get": {
        "summary": "Liste tous les événements",
        "tags": ["Events"],
        "responses": {
          "200": {
            "description": "Liste des événements",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "events": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Event"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer un événement (admin)",
        "tags": ["Events"],
        "security": [{"AdminKey": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/Event"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Événement créé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer"}
                  }
                }
              }
            }
          },
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/event/{id}": {
      "get": {
        "summary": "Obtenir un événement par ID",
        "tags": ["Events"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Détails de l'événement",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "event": {"$ref": "#/components/schemas/Event"}
                  }
                }
              }
            }
          },
          "404": {"description": "Événement non trouvé"}
        }
      },
      "put": {
        "summary": "Mettre à jour un événement (admin)",
        "tags": ["Events"],
        "security": [{"AdminKey": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/Event"}
            }
          }
        },
        "responses": {
          "200": {"description": "Événement mis à jour"},
          "401": {"description": "Non autorisé"},
          "404": {"description": "Événement non trouvé"}
        }
      },
      "delete": {
        "summary": "Supprimer un événement (admin)",
        "tags": ["Events"],
        "security": [{"AdminKey": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {"description": "Événement supprimé"},
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "Liste toutes les catégories",
        "tags": ["Categories"],
        "responses": {
          "200": {
            "description": "Liste des catégories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "categories": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Category"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/candidates": {
      "get": {
        "summary": "Liste tous les candidats",
        "tags": ["Candidates"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": false,
            "schema": {"type": "string"},
            "description": "Recherche par nom"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des candidats",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "candidates": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Candidate"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/candidate": {
      "post": {
        "summary": "Créer un candidat avec ou sans upload d'image (admin)",
        "tags": ["Candidates"],
        "security": [{"AdminKey": []}],
        "description": "⚠️ IMPORTANT: Cette route accepte 2 formats différents:\n\n1️⃣ **JSON** (Content-Type: application/json): Le champ 'image' doit être une URL HTTP complète d'une image déjà uploadée. Si vous avez un fichier local, uploadez-le d'abord via /api/upload.\n\n2️⃣ **Multipart** (Content-Type: multipart/form-data): Upload direct du fichier image. Dans curl, utilisez -F 'image=@/chemin/fichier.jpg' (notez le @).",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {"type": "string", "description": "Nom du candidat", "example": "Jean Dupont"},
                  "bio": {"type": "string", "description": "Biographie du candidat", "example": "Étudiant en informatique passionné par le développement web"},
                  "image": {
                    "type": "string", 
                    "format": "uri",
                    "description": "⚠️ URL HTTP complète de l'image (PAS un chemin de fichier local, PAS de @). Exemple: http://localhost:8000/storage/xxx.jpg - Pour uploader un fichier local, utilisez d'abord /api/upload ou utilisez multipart/form-data", 
                    "example": "http://localhost:8000/storage/candidate_abc123_1677123456.jpg"
                  },
                  "category_id": {"type": "integer", "description": "ID de la catégorie", "example": 1},
                  "extra": {"type": "object", "description": "Données supplémentaires au format JSON", "example": {"instagram": "@username", "age": 22}}
                },
                "required": ["name"]
              },
              "examples": {
                "avec_url_image": {
                  "summary": "✅ Créer avec URL d'image (fichier déjà uploadé)",
                  "description": "Utilisez cette méthode si vous avez déjà uploadé l'image via /api/upload. Le champ 'image' doit être une URL HTTP, PAS un chemin de fichier local.",
                  "value": {
                    "name": "Marie Dupont",
                    "bio": "Étudiante en médecine",
                    "image": "http://localhost:8000/storage/candidate_abc123_1677123456.jpg",
                    "category_id": 1,
                    "extra": {"instagram": "@marie_dupont"}
                  }
                },
                "exemple_incorrect": {
                  "summary": "❌ INCORRECT - Ne faites PAS ceci",
                  "description": "Ceci ne fonctionnera PAS: vous ne pouvez pas utiliser un chemin de fichier local ou @ dans le format JSON",
                  "value": {
                    "name": "Marie Dupont",
                    "bio": "Étudiante",
                    "image": "@C:/Users/Admin/Pictures/photo.jpg",
                    "category_id": 1
                  }
                }
              }
            },
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {"type": "string", "description": "Nom du candidat", "example": "Jean Dupont"},
                  "bio": {"type": "string", "description": "Biographie du candidat", "example": "Étudiant en informatique"},
                  "image": {
                    "type": "string", 
                    "format": "binary", 
                    "description": "Fichier image à uploader (JPEG, PNG, GIF, WebP - max 10MB). Utilisez @ devant le chemin du fichier dans curl"
                  },
                  "category_id": {"type": "integer", "description": "ID de la catégorie", "example": 1},
                  "extra": {"type": "string", "description": "JSON string de données supplémentaires", "example": "{\"instagram\":\"@username\",\"age\":22}"}
                },
                "required": ["name", "image"]
              },
              "examples": {
                "upload_direct": {
                  "summary": "Créer un candidat avec upload d'image (curl)",
                  "description": "Exemple avec curl - notez le @ devant le chemin du fichier",
                  "value": "curl -X POST 'http://localhost:8000/api/candidate' -H 'X-ADMIN-KEY: votre_cle' -F 'name=Jean Dupont' -F 'bio=Étudiant' -F 'category_id=1' -F 'image=@/chemin/vers/photo.jpg'"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Candidat créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer", "description": "ID du candidat créé"},
                    "image_url": {"type": "string", "description": "URL complète de l'image uploadée"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erreur de validation ou d'upload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/candidate/{id}": {
      "get": {
        "summary": "Obtenir un candidat par ID",
        "tags": ["Candidates"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "Détails du candidat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "candidate": {"$ref": "#/components/schemas/Candidate"}
                  }
                }
              }
            }
          },
          "404": {"description": "Candidat non trouvé"}
        }
      },
      "put": {
        "summary": "Mettre à jour un candidat (admin)",
        "tags": ["Candidates"],
        "security": [{"AdminKey": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/Candidate"}
            }
          }
        },
        "responses": {
          "200": {"description": "Candidat mis à jour"},
          "401": {"description": "Non autorisé"},
          "404": {"description": "Candidat non trouvé"}
        }
      },
      "delete": {
        "summary": "Supprimer un candidat (admin)",
        "tags": ["Candidates"],
        "security": [{"AdminKey": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {"description": "Candidat supprimé"},
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/vote": {
      "post": {
        "summary": "Voter pour un candidat (public)",
        "tags": ["Votes"],
        "description": "Un vote par personne (cookie + IP). Pas besoin de compte.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "candidate_id": {"type": "integer"}
                },
                "required": ["candidate_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote enregistré",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"}
                  }
                }
              }
            }
          },
          "409": {
            "description": "Déjà voté",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "error": {"type": "string", "example": "already_voted"}
                  }
                }
              }
            }
          },
          "400": {"description": "candidate_id manquant"}
        }
      }
    },
    "/share/create": {
      "post": {
        "summary": "Créer un lien de partage (admin)",
        "tags": ["Share"],
        "security": [{"AdminKey": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "candidate_id": {"type": "integer"}
                },
                "required": ["candidate_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token créé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {"type": "string"},
                    "url": {"type": "string"}
                  }
                }
              }
            }
          },
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/share/{token}": {
      "get": {
        "summary": "Résoudre un lien de partage",
        "tags": ["Share"],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Candidat résolu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "candidate": {"$ref": "#/components/schemas/Candidate"}
                  }
                }
              }
            }
          },
          "404": {"description": "Token non trouvé"}
        }
      }
    },
    "/user/register": {
      "post": {
        "summary": "Enregistrer un nouvel utilisateur",
        "tags": ["Users"],
        "description": "Créer un compte utilisateur pour voter et participer aux événements",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password"],
                "properties": {
                  "username": {"type": "string", "example": "johndoe"},
                  "email": {"type": "string", "format": "email", "example": "john@example.com"},
                  "password": {"type": "string", "minLength": 6, "example": "password123"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Utilisateur créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "username": {"type": "string"},
                        "email": {"type": "string"},
                        "role": {"type": "string", "example": "user"},
                        "created_at": {"type": "string", "format": "date-time"}
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {"description": "Données invalides ou mot de passe trop court"},
          "409": {"description": "Username ou email déjà existant"}
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Connexion utilisateur",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {"type": "string", "example": "johndoe"},
                  "password": {"type": "string", "example": "password123"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentification réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "username": {"type": "string"},
                        "email": {"type": "string"},
                        "role": {"type": "string", "example": "user"},
                        "login_at": {"type": "string", "format": "date-time"}
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {"description": "Données manquantes"},
          "401": {"description": "Identifiants incorrects"}
        }
      }
    },
    "/votes/stats": {
      "get": {
        "summary": "Statistiques des votes (admin)",
        "tags": ["Votes"],
        "security": [{"AdminKey": []}],
        "description": "Obtenir le nombre total de votes et les statistiques par candidat",
        "responses": {
          "200": {
            "description": "Statistiques des votes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_votes": {"type": "integer", "example": 1250},
                    "candidates": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "name": {"type": "string"},
                          "votes": {"type": "integer", "description": "Compteur dans la table candidates"},
                          "actual_votes": {"type": "integer", "description": "Compteur réel depuis la table votes"}
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {"description": "Non autorisé"}
        }
      }
    },
    "/votes/sync": {
      "post": {
        "summary": "Synchroniser les compteurs de votes (admin)",
        "tags": ["Votes"],
        "security": [{"AdminKey": []}],
        "description": "Recalculer tous les compteurs de votes depuis la table votes pour corriger les incohérences",
        "responses": {
          "200": {
            "description": "Compteurs synchronisés",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {"type": "boolean"},
                    "message": {"type": "string", "example": "Vote counts synchronized"}
                  }
                }
              }
            }
          },
          "401": {"description": "Non autorisé"},
          "500": {"description": "Erreur de synchronisation"}
        }
      }
    },
    "/upload": {
      "post": {
        "summary": "Upload une image (admin)",
        "tags": ["Upload"],
        "security": [{"AdminKey": []}],
        "description": "Upload une image dans le dossier storage/ et retourne l'URL complète",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Fichier image (JPEG, PNG, GIF, WebP, max 10MB)"
                  },
                  "prefix": {
                    "type": "string",
                    "description": "Préfixe pour le nom du fichier (défaut: 'img')",
                    "default": "img"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image uploadée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean", "example": true},
                    "url": {"type": "string", "description": "URL complète de l'image", "example": "http://localhost:8000/storage/candidate_abc123_1677123456.jpg"},
                    "path": {"type": "string", "description": "Chemin relatif", "example": "/storage/candidate_abc123_1677123456.jpg"},
