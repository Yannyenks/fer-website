{
  "typography": {
    "version": "1.0.0",
    "description": "Syst√®me de typographie responsive pour FER Website",
    "lastUpdated": "2025-11-22",
    
    "sizes": {
      "h1": {
        "variable": "--font-size-h1",
        "className": "text-h1",
        "typescript": "FontSize.h1",
        "min": "28px",
        "max": "48px",
        "clamp": "clamp(1.75rem, 1.5rem + 1.25vw, 3rem)"
      },
      "h2": {
        "variable": "--font-size-h2",
        "className": "text-h2",
        "typescript": "FontSize.h2",
        "min": "24px",
        "max": "40px",
        "clamp": "clamp(1.5rem, 1.25rem + 1.25vw, 2.5rem)"
      },
      "h3": {
        "variable": "--font-size-h3",
        "className": "text-h3",
        "typescript": "FontSize.h3",
        "min": "20px",
        "max": "32px",
        "clamp": "clamp(1.25rem, 1.125rem + 0.625vw, 2rem)"
      },
      "h4": {
        "variable": "--font-size-h4",
        "className": "text-h4",
        "typescript": "FontSize.h4",
        "min": "18px",
        "max": "24px",
        "clamp": "clamp(1.125rem, 1rem + 0.625vw, 1.5rem)"
      },
      "h5": {
        "variable": "--font-size-h5",
        "className": "text-h5",
        "typescript": "FontSize.h5",
        "min": "16px",
        "max": "20px",
        "clamp": "clamp(1rem, 0.95rem + 0.25vw, 1.25rem)"
      },
      "h6": {
        "variable": "--font-size-h6",
        "className": "text-h6",
        "typescript": "FontSize.h6",
        "min": "14px",
        "max": "16px",
        "clamp": "clamp(0.875rem, 0.85rem + 0.125vw, 1rem)"
      },
      "body": {
        "variable": "--font-size-body",
        "className": "text-body",
        "typescript": "FontSize.body",
        "min": "14px",
        "max": "16px",
        "clamp": "clamp(0.875rem, 0.8rem + 0.375vw, 1rem)"
      },
      "bodyLarge": {
        "variable": "--font-size-body-large",
        "className": "text-body-large",
        "typescript": "FontSize.bodyLarge",
        "min": "16px",
        "max": "18px",
        "clamp": "clamp(1rem, 0.95rem + 0.25vw, 1.125rem)"
      },
      "bodySmall": {
        "variable": "--font-size-body-small",
        "className": "text-body-small",
        "typescript": "FontSize.bodySmall",
        "min": "12px",
        "max": "14px",
        "clamp": "clamp(0.75rem, 0.7rem + 0.25vw, 0.875rem)"
      },
      "caption": {
        "variable": "--font-size-caption",
        "className": "text-caption",
        "typescript": "FontSize.caption",
        "min": "10px",
        "max": "12px",
        "clamp": "clamp(0.625rem, 0.6rem + 0.125vw, 0.75rem)"
      },
      "button": {
        "variable": "--font-size-button",
        "className": "text-button",
        "typescript": "FontSize.button",
        "min": "14px",
        "max": "16px",
        "clamp": "clamp(0.875rem, 0.85rem + 0.125vw, 1rem)"
      },
      "buttonLarge": {
        "variable": "--font-size-button-large",
        "className": "text-button-large",
        "typescript": "FontSize.buttonLarge",
        "min": "16px",
        "max": "18px",
        "clamp": "clamp(1rem, 0.95rem + 0.25vw, 1.125rem)"
      },
      "lead": {
        "variable": "--font-size-lead",
        "className": "text-lead",
        "typescript": "FontSize.lead",
        "min": "18px",
        "max": "24px",
        "clamp": "clamp(1.125rem, 1rem + 0.625vw, 1.5rem)"
      },
      "display": {
        "variable": "--font-size-display",
        "className": "text-display",
        "typescript": "FontSize.display",
        "min": "40px",
        "max": "64px",
        "clamp": "clamp(2.5rem, 2rem + 2.5vw, 4rem)"
      }
    },
    
    "weights": {
      "light": {
        "variable": "--font-weight-light",
        "className": "font-light",
        "typescript": "FontWeight.light",
        "value": 300
      },
      "normal": {
        "variable": "--font-weight-normal",
        "className": "font-normal",
        "typescript": "FontWeight.normal",
        "value": 400
      },
      "medium": {
        "variable": "--font-weight-medium",
        "className": "font-medium",
        "typescript": "FontWeight.medium",
        "value": 500
      },
      "semibold": {
        "variable": "--font-weight-semibold",
        "className": "font-semibold",
        "typescript": "FontWeight.semibold",
        "value": 600
      },
      "bold": {
        "variable": "--font-weight-bold",
        "className": "font-bold",
        "typescript": "FontWeight.bold",
        "value": 700
      },
      "extrabold": {
        "variable": "--font-weight-extrabold",
        "className": "font-extrabold",
        "typescript": "FontWeight.extrabold",
        "value": 800
      }
    },
    
    "lineHeights": {
      "tight": {
        "variable": "--line-height-tight",
        "className": "leading-tight",
        "typescript": "LineHeight.tight",
        "value": 1.25
      },
      "normal": {
        "variable": "--line-height-normal",
        "className": "leading-normal",
        "typescript": "LineHeight.normal",
        "value": 1.5
      },
      "relaxed": {
        "variable": "--line-height-relaxed",
        "className": "leading-relaxed",
        "typescript": "LineHeight.relaxed",
        "value": 1.75
      }
    },
    
    "letterSpacings": {
      "tight": {
        "variable": "--letter-spacing-tight",
        "className": "tracking-tight",
        "typescript": "LetterSpacing.tight",
        "value": "-0.025em"
      },
      "normal": {
        "variable": "--letter-spacing-normal",
        "className": "tracking-normal",
        "typescript": "LetterSpacing.normal",
        "value": "0"
      },
      "wide": {
        "variable": "--letter-spacing-wide",
        "className": "tracking-wide",
        "typescript": "LetterSpacing.wide",
        "value": "0.025em"
      },
      "wider": {
        "variable": "--letter-spacing-wider",
        "className": "tracking-wider",
        "typescript": "LetterSpacing.wider",
        "value": "0.05em"
      }
    },
    
    "usageExamples": {
      "cssClass": "<h1 className=\"text-h1 font-bold\">Titre</h1>",
      "cssVariable": "<div style={{ fontSize: 'var(--font-size-h1)' }}>Texte</div>",
      "typescript": "import { FontSize } from './styles/typography'; <div style={{ fontSize: FontSize.h1 }}>Texte</div>",
      "preset": "import { TypographyPresets } from './styles/typography'; <div style={TypographyPresets.h1}>Texte</div>"
    },
    
    "files": {
      "styles": [
        "src/styles/typography.css",
        "src/styles/typography.ts",
        "src/styles/global.css",
        "src/styles/index.ts"
      ],
      "examples": [
        "src/components/TypographyExample.tsx",
        "src/components/TypographyAdvancedDemo.tsx",
        "src/styles/typography.usage.tsx"
      ],
      "tests": [
        "public/test-typography.html"
      ],
      "documentation": [
        "src/styles/README.md",
        "TYPOGRAPHY_GUIDE.md"
      ]
    },
    
    "breakpoints": {
      "mobile": "< 640px",
      "tablet": "640px - 1024px",
      "desktop": "1024px - 1440px",
      "largeDesktop": "> 1440px"
    },
    
    "importPaths": {
      "typography": "import { FontSize, FontWeight, LineHeight } from '../styles/typography';",
      "index": "import { TypographyPresets, TypographyClasses } from '../styles/index';",
      "css": "import '../styles/global.css';"
    }
  }
}
